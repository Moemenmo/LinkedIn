@model Post
    @if (Model.SharedPostId!=null)
    {
        @Html.Partial("_SharedPost")
    }
<div class="card-body post-body ">
    <div class="card post ">
        <div class="post-header card-header">
            <img class="post-profile-img" src="unnamed.jpg">
            <div class="post-header-creator-info">
                <h6>@Model.Author.FirstName @Model.Author.LastName</h6>
                <small class="text-muted">@Model.Author.Indstry</small>
                <small class="text-muted">Add at @Model.Date.Day</small>
            </div>
        </div>
        <div class="post-body card-body">

            <p class="card-text">@Model.Status</p>
        </div>
        @if (Model.ImageUrl!=null)
        {
            <img class="card-img-top" src=@Model.ImageUrl alt="Card image cap">
        }


    </div>
</div>
@*number of likes and comments*@
<div class="post-status">

    <p class="card-text">
        <small class="text-muted">
            <small class="text-muted" data-toggle="modal" data-target=".bd-example-modal-sm"><i class="far fa-thumbs-up"></i>&nbsp;<i class="far fa-comments"></i>&nbsp;<i class="fas fa-share"></i>@Model.Likes.Count</small>
            <small class="text-muted">@Model.Comments.Count</small>
        </small>
    </p>

</div>
@Html.Partial("_LikeAndComment")
