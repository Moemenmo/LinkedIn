                        <button class="footer__text btn btn-link">ProFinder</button>
                    </li>
                </ul>
            </div>

            <div>
                <h3>Business Solutions</h3>
                <ul class="footer__list">
                    <li>
                        <button class="footer__text btn btn-link">Talent</button>
                    </li>
                    <li>
                        <button class="footer__text btn btn-link">Marketing</button>
                    </li>
                    <li>
                        <button class="footer__text btn btn-link">Sales</button>
                    </li>
                    <li>
                        <button class="footer__text btn btn-link">Learning</button>
                    </li>
                </ul>
            </div>

            <div>
                <h3>Directories</h3>
                <ul class="footer__list">
                    <li>
                        <button class="footer__text btn btn-link">Members</button>
                    </li>
                    <li>
                        <button class="footer__text btn btn-link">Jobs</button>
                    </li>
                    <li>
                        <button class="footer__text btn btn-link">Companies</button>
                    </li>
                    <li>
                        <button class="footer__text btn btn-link">Salaries</button>
                    </li>
                    <li>
                        <button class="footer__text btn btn-link">Universities</button>
                    </li>
                    <li>
                        <button class="footer__text btn btn-link">Featured</button>
                    </li>
                    <li>
                        <button class="footer__text btn btn-link">Learning</button>
                    </li>
                    <li>
                        <button class="footer__text btn btn-link">Posts</button>
                    </li>
                </ul>
            </div>
        </footer>
    </div>

