<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>LinkedIn: Log In or Sign Up</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/"
          crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/IndexStyleSheet.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="header">
        <div class="header__logo">
            <img src="/images/logo.jpg" class="logo__img img-fluid" alt="Responsive image">
        </div>

        <div class="col-3 row nav__btns">
            <div class="col">
                @*<button class="nav__btn--join btn" type="button">Join now</button>*@
                @Html.ActionLink("Join Now", "Register", "Account", null, new { @class = "nav__btn--join btn"} )
            </div>
            @*<button class="col nav__btn--sign btn btn-outline-primary" type="button">Sign in</button>*@
            @Html.ActionLink("Sign in", "Login", "Account", null, new { @class = "col nav__btn--sign btn btn-outline-primary" })
        </div>
    </div>

    <div class="section__home">
        <div class="section__tabs">
            <h1 class="tabs__title ">Welcome to your professional community</h1>

            <div class="tabs__content">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="job-tab" data-toggle="tab" href="#job" role="tab" aria-controls="job"
                           aria-selected="true">Job</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="people-tab" data-toggle="tab" href="#people" role="tab" aria-controls="people"
                           aria-selected="false">People</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="job" role="tabpanel" aria-labelledby="jobs-tab">
                        <br />
                        <div class="search">
                            <span class="fa fa-search"></span>
                            <input type="search" placeholder="Search job titles or companies" id="" class="search__jobs">
                        </div>
                        <br />
                        <div class="search">
                            <span class="fas fa-map-marker-alt"></span>
                            <input type="search" placeholder="Location" id="" class="search__location">
                        </div>
                        <button type="button" class="btn btn--rounded-primary "> Search Jobs</button>

                    </div>
                        <div class="tab-pane fade " id="people" role="tabpanel" aria-labelledby="people-tab">
                    @using (Html.BeginForm("Search", "Home", FormMethod.Get))
                    {
                            <br />
                            <div class="search">
                                @*<input type="search" placeholder="Firstname" id="" class="search__firstname">*@
                                @Html.TextBox("fname", null, new { @class = "search__jobs" , @placeholder = "Firstname" })


                            </div>
                            <br />
                            <div class="search">
                                @*<input type="search" placeholder="Lastname" id="" class="search__lastname">*@
                                @Html.TextBox("lname", null, new { @class = "search__jobs" , @placeholder = "Lastname" })


                            </div>
                            <button type="submit" class="btn btn--rounded-primary"> Search People</button>

                    }
                        </div>

                </div>
            </div>
        </div>

        <div class="section__img">
            <img src="/images/sec1.svg" class="img-fluid img__content" alt="Responsive image">
        </div>
    </div>

    <div class="internship">
        <div class="container">

            <div class="row">
                <div class="internship__content col">
                    <h1 class="content__header">
                        Find the right job or internship for you
                    </h1>


                </div>
                <div class="internship__search col">
                    <h3 div="search__header">SUGGESTED SEARCHES</h3>
                    <button type="button" class="btn btn--rounded-gray"> Development</button>
                    <button type="button" class="btn btn--rounded-gray"> Engineering</button>
                    <button type="button" class="btn btn--rounded-gray"> Finance</button><br><br>

                    <button type="button" class="btn btn--rounded-gray"> Finance</button>
                    <button type="button" class="btn btn--rounded-gray"> Human Resources</button>
                    <button type="button" class="btn btn--rounded-gray"> Marketing</button><br><br>
                    <button type="button" class="btn btn--rounded-gray"> Information Technology</button> <br> <br>


                </div>
            </div>
        </div>

    </div>

    <div class="job">
        <div class="container">
            <div class="row">
                <div class="job__content col-lg-6 col-md-12 col-sm-12">

                    <h2 class="content__header">Post your job for millions of people to see</h2>
                </div>
                <div class="job__post  col">
                    <button type="button" class="btn btn--rounded-transparent"> Post a Job</button>

                </div>
            </div>
        </div>

    </div>

    <div class="find row">
        <div class="find__people col">
            <img class="people__img" alt="Connect with people who can help"
                 src="/images/connect.svg">
            <h2 class="people__header">
                Connect with people who can help

            </h2>
            <button type="button" class="btn btn--rounded-primary"> Find people you know </button>



        </div>
        <div class="find__people col">
            <img class="people__img" alt="Connect with people who can help"
                 src="/images/learn.svg">
            <h2 class="people__header">
                Learn the skills you need to succeed
            </h2>
            <div class="btn-group">
                <button type="button" class="btn btn-transparent dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Choose a topic to learn about
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">Training and Education</a>
                    <a class="dropdown-item" href="#">IT Help Desk</a>
                    <a class="dropdown-item" href="#">Business Analysis and Strategy</a>
                    <a class="dropdown-item" href="#">Finance and Accounting</a>
                    <a class="dropdown-item" href="#">Career Development</a>



                </div>
            </div>


        </div>
    </div>

    <div class="row section__discover">
        <div class="col-lg-6 col-md-12 col-sm-12 section__bg">
            <div class="discovery__content">
                <h2 class="content__header">Who is LinkedIn for?</h2>
                <h3 class="content__subtitle">Anyone looking to navigate their professional life</h3>
                <ul class="content__list">
                    <li class="list__item">
                        <a class="list__button" data-tracking-control-name="homepage-basic_brand-discovery" data-tracking-will-navigate="" href="">
                            Find a coworker or classmate
                            <li-icon aria-hidden="true" id="chevron-right-icon" class="button__arrow" type="chevron-right-icon"></li-icon>
                        </a>
                    </li>

                    <li class="list__item">
                        <a class="list__button" data-tracking-control-name="homepage-basic_brand-discovery" data-tracking-will-navigate="" href="">
                            Find a new job
                            <li-icon aria-hidden="true" id="chevron-right-icon" class="button__arrow" type="chevron-right-icon"></li-icon>
                        </a>
                    </li>

                    <li class="list__item">
                        <a class="list__button" target="_blank" rel="noopener" data-tracking-control-name="homepage-basic_brand-discovery" data-tracking-will-navigate="" href="">
                            Find a course or training
                            <li-icon aria-hidden="true" id="chevron-right-icon" class="button__arrow" type="chevron-right-icon"></li-icon>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="col-lg-6 col-md-0 d-lg-block d-md-none section__img">
            <img class="discovery__img img-fluid" aria-hidden="true"
                 alt="Who is LinkedIn for?" src="/images/whoislinkedinfor.jfif">
        </div>
    </div>

    <div class="row section__marketing">
        <div class="col-8 section__bg">
        </div>

        <div class="row section__marketing">
            <div class="col-6 marketing__media">
                <iframe class="marketing__iframe" title="Whatever You're In It For, We're #InItTogether"
                        allowfullscreen="" src="https://www.youtube.com/embed/husM7ItmbFU?rel=0"></iframe>
            </div>
            <div class="col-6 marketing__copy">
                <h2 class="marketing__header">
                    Find your community
                </h2>
                <h3 class="marketing__subtitle">
                    No matter your profession, we're in it together
                </h3>
            </div>
        </div>
    </div>

    <div class="section__join">
        <div class="section__title">
            <h2 class="title__content">Join your colleagues, classmates, and friends on LinkedIn.</h2>
            <a href="" class="title__btn  btn btn--rounded-primary">Get started</a>
        </div>
    </div>

    <div class="section__footer">

        <footer class="footer container">
            <div>
                <img class="footer__logo" src="/images/linkedIn-logo.png">
            </div>
            <div>
                <h3>General</h3>
                <ul class="footer__list">
                    <li>
                        <button class="footer__text btn btn-link">Sign Up</button>
                    </li>
                    <li>
